{
  "name": "sort-by-hltb",
  "version": "1.0.0",
  "description": "A plugin to sort the library by game length according to How Long To Beat",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
