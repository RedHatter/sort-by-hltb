    "check": "pnpx @biomejs/biome check --write"
  },
  "repository": "git+https://github.com/RedHatter/sort-by-hltb.git",
  "keywords": ["decky", "plugin", "steam-deck", "deck", "hltb"],
  "author": "Ava Johnson <ava.johnson@zohomail.com>",
  "license": "BSD-3-Clause",
  "bugs": "https://github.com/RedHatter/sort-by-hltb/issues",
  "devDependencies": {
    "@decky/rollup": "^1.0.1",
    "@decky/ui": "^4.9.2",
    "@types/fast-levenshtein": "^0.0.4",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@types/webpack": "^5.28.5",
    "rollup": "^4.38.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@decky/api": "^1.1.2",
    "@tanstack/react-store": "^0.7.0",
    "fast-levenshtein": "^3.0.0",
    "localforage": "^1.10.0",
    "react-icons": "^5.5.0",
    "tslib": "^2.8.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": ["react", "react-dom"]
    }
